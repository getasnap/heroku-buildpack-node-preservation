#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)

echo "Build Dir ${BUILD_DIR}"
echo "BP_DIR ${BP_DIR}"
echo "HOME ${HOME}"
which node
which mjml

# Setting environment variables for export
echo "-----> Preserving Node Environment Variables"
echo "export PATH=\"$HOME/.heroku/node/bin:$HOME/.heroku/yarn/bin:\$PATH:$HOME/node_modules/.bin\"" > "$BP_DIR/export"

more "$BP_DIR"/export

echo "-----> Done"
exit 0

#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1

echo "-----> preserving the node_modules directory"
echo "Build Dir ${BUILD_DIR}"
ls -al $BUILD_DIR/node_modules
ln -s $BUILD_DIR/node_modules /app/.heroku/node_modules

echo "-----> Deleting the nodejs.sh startup script"
rm $BUILD_DIR/.profile.d/nodejs.sh
